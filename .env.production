# Production Configuration for HR-AI System
# Copy this file to .env and configure for your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a secure secret key for JWT tokens
SECRET_KEY=your-super-secure-secret-key-change-this-in-production

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Rate limiting settings
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# SQLite database path (for production, consider PostgreSQL)
DATABASE_URL=sqlite:///data/hr_system_production.db

# Database backup settings
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_INTERVAL_HOURS=24

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for real email delivery
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
EMAIL_USER=your-email@company.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM_NAME=HR Team

# Email templates
EMAIL_TEMPLATE_DIR=templates/email

# =============================================================================
# WHATSAPP CONFIGURATION
# =============================================================================
# WhatsApp Business API settings
WHATSAPP_ACCESS_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# =============================================================================
# VOICE CALL CONFIGURATION
# =============================================================================
# Twilio settings
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Vaani-Karthikeya API settings
VAANI_API_KEY=your-vaani-api-key
VAANI_API_URL=https://api.vaani-karthikeya.com

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
# Performance monitoring settings
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_MONITORING_INTERVAL=30
PERFORMANCE_ALERT_CPU_THRESHOLD=80
PERFORMANCE_ALERT_MEMORY_THRESHOLD=85
PERFORMANCE_ALERT_DISK_THRESHOLD=90

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log file settings
LOG_FILE_PATH=logs/hr_system.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# FILE STORAGE SETTINGS
# =============================================================================
# File upload settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=pdf,doc,docx,txt,csv,xlsx

# Storage paths
UPLOAD_DIR=uploads
BACKUP_DIR=backups
EXPORT_DIR=exports
TEMP_DIR=temp

# =============================================================================
# API SETTINGS
# =============================================================================
# API server settings
API_HOST=0.0.0.0
API_PORT=5000
API_WORKERS=4

# API documentation
API_TITLE=HR-AI System API
API_VERSION=2.0.0
API_DESCRIPTION=Production-ready HR automation system with multi-channel communication

# =============================================================================
# DASHBOARD SETTINGS
# =============================================================================
# Streamlit dashboard settings
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501
DASHBOARD_TITLE=HR-AI System Dashboard

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Third-party service settings
SLACK_WEBHOOK_URL=your-slack-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url

# Analytics and monitoring
GOOGLE_ANALYTICS_ID=your-google-analytics-id
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
# Backup settings
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_CLOUD_STORAGE=false
AWS_S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# =============================================================================
# COMPLIANCE AND AUDIT
# =============================================================================
# Audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
DATA_RETENTION_DAYS=2555  # 7 years

# Privacy settings
GDPR_COMPLIANCE=true
DATA_ANONYMIZATION=true

# =============================================================================
# SCALING AND LOAD BALANCING
# =============================================================================
# Redis settings (for session management and caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# Load balancer settings
LOAD_BALANCER_ENABLED=false
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# System notification settings
ADMIN_EMAIL=admin@company.com
ALERT_EMAIL_ENABLED=true
ALERT_SLACK_ENABLED=false

# Notification thresholds
ALERT_ERROR_RATE_THRESHOLD=5
ALERT_RESPONSE_TIME_THRESHOLD=2000
ALERT_DISK_USAGE_THRESHOLD=85

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# These settings override production settings in development
# Remove or comment out in production

# DEV_MODE=true
# DEV_EMAIL_BACKEND=console
# DEV_WHATSAPP_BACKEND=mock
# DEV_VOICE_BACKEND=mock